
	menu()
		background linear-gradient(45deg,azulClaro,azulObscuro)
		
		figure
			margin 0
			&.logoUni
				width 60%
				display inline-block
				margin 0 auto
				img
					width 100%
			&.fotoUser
				width 100px
				height 130px
				display block
				margin 4% auto
				border-radius 50%
				border 4px solid blanco
				img
					width 100px
					height 130px
					border-radius 50%
		p
			color blanco
			background azulObscuro 
			padding 1%
			text-align center
			width 25px
			border-radius 5px
			display inline-block
			float right 
			margin-right 3%
			border 2px solid blanco
			&:after
				content '\e005'
				font-family Flaticon

div.usuario
	h2
		text-align center
		color blanco	
		text-shadow 3px 3px 3px black
nav
	ul.menuPrincipal
		margin 0
		padding 1.5%
		li
			list-style none
			margin 5% 3%
			cursor pointer
			width 70%
			display inline-block
			color blanco
			font-weight bold
			border-bottom 1px solid rgba(blanco,.5)
			ul
				display none
				li
					border none
		span
			background blanco
			border-radius 50%
			color azulObscuro
			cursor pointer
			display inline-block
			font-family Flaticon
			font-size 30px
			height 30px
			margin-left 3%
			padding 2%
			text-align center
			vertical-align top
			width 30px
			&.iconCordi:after
				content "\e007"
			&.iconMaestro:after
				content "\e003"
			&.iconAlumno:after
				content "\e000"
			&.iconFiles:after
				content '\e002'
			&.iconNotifi:after
				content '\e006'
			&.iconLogout:after
				content '\e001'
							
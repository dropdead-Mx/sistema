azul=#12183e
naranja=#FF7B00
blanco=#FFF
negro=#000
grisClaro=#afafaf
grisFuerte=#efefef

@font-face {
	font-family: "Flaticon";
	src: url("font/flaticon.eot");
	src: url("font/flaticon.eot#iefix") format("embedded-opentype"),
	url("font/flaticon.woff") format("woff"),
	url("font/flaticon.ttf") format("truetype"),
	url("font/flaticon.svg") format("svg");
	font-weight: normal;
	font-style: normal;
}


encabezado()
	background linear-gradient(180deg,azul,#4254c6)
	color blanco
	figure.logo
		width 50%
		display block
		margin 0 auto
		img
			width 100%
	
		
	div.usuario
		text-align center
		figure
			width 30%
			background naranja
			display block
			margin 2% auto
			border-radius 50%
			border 5px solid blanco
			img
				width 100%
	nav
		ul.menuPrincipal
			margin 0
			padding 1.5%
			li
				list-style none
				margin 5% 3%
				cursor pointer
				width 70%
				display inline-block
				ul
					display none
			span
				cursor pointer
				width 30px
				height 30px
				display inline-block
				background blanco
				color azul
				font-family Flaticon
				font-size 30px
				border-radius 50%
				text-align center
				padding 2%
				margin-left 3%
				vertical-align top
				&.iconCordi:after
					content "\e007"
				&.iconMaestro:after
					content "\e003"
				&.iconAlumno:after
					content "\e006"
				&.iconFiles:after
					content '\e002'
				&.iconNotifi:after
					content '\e001'
				&.iconLogout:after
					content '\e000'
	